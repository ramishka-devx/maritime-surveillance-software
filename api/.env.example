# Copy to .env and fill in values

# Server
PORT=3000
NODE_ENV=development

# Database (PostgreSQL)
# This API is intended to use the same database as api-init (default DB_NAME=ais_db).
# For a remote Postgres on a droplet, typically use DB_PORT=5432.
# If you prefer an SSH tunnel, you can forward local 15432 -> remote 5432 and set DB_PORT=15432.
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=
DB_NAME=ais_db

# Auth
JWT_SECRET=change-me
JWT_EXPIRES_IN=1d

# RBAC (optional)
# In dev only, you can bypass permission checks (NOT recommended)
PERMISSIONS_BYPASS=false

# Email (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=noreply@seranguard.local
